/*清除浮动*/
.clearfix:after { clear: both; display: block; height: 0; content: ""; }
/*主体部分*/
.contains { width: 1000px; margin: 0 auto; }
/*面包屑导航*/
.crumbNav { padding: 18px 0; color: #323232; }
.crumbNav a { color: #ed7f5a; }
.crumbNav a:hover { color: #d95459; }
.crumbNav font { padding: 0 2px; font-family: simsun; }
/**选择商品分类**/
.wareSort { padding: 15px 8px 15px 7px; border: 1px solid #ddd; background-color: #f6f6f6; }
.wareSort ul { float: left; width: 290px; padding: 10px; border: 1px solid #ddd; margin-right: 7px; margin-left: 8px; background-color: #fff; }
.wareSort #sort3 li{ background: none;}
.wareSort #sort3 li.active a { background: none;}
.wareSort ul li { background: url(../images/trangle.png) no-repeat right center;}
.wareSort ul li a { display: block; padding-right: 25px; padding-left: 10px; border: 1px solid #fff; line-height: 28px; overflow: hidden; white-space: nowrap; text-overflow: ellipsis; color:#444 }
.wareSort ul li a:hover { color: #FD7636; }
.wareSort ul li.active a {/* border-color: #FD7636;*/ background: #FFF4F0 url(../images/trangle1.png) no-repeat right center; color: #FD7636; }
.selectedSort { padding: 10px 15px; border: 1px solid #ed7f5a; margin-top: 10px; margin-bottom: 10px; background-color: #fff4f0; color: #ed7f5a; }
.selectedSort span{ float: left;}
.selectedSort span a{ color: #ed7f5a; margin-left: 5px;}
.selectedSort b { margin-left: 20px; }
.selectedSort i font { font-family: simsun;  }
.selectedSort i {font-style:normal; color: #ed7f5a;}
.wareSortBtn { padding-bottom: 20px; text-align: right; margin-top: 20px; }
.wareSortBtn input { width: 200px; height: 36px; border: 1px solid #ed7f5a; -webkit-border-radius: 2px; -moz-border-radius: 2px; border-radius: 2px; background-color: #FD7636; color: #fff; cursor: pointer; }
.wareSortBtn input:hover { border-color: #f45104; background-color: #f45104; }
.wareSortBtn input:disabled { border-color: #ddd; background-color: #f6f6f6; color: #9a9a9a;}
